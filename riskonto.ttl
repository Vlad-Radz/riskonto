# Cause of Risk
:Cause a rdfs:Class, owl:Class ;
    rdfs:label "Cause"@en ;
    rdfs:comment "Indicates a cause or threat that has the potential to materialise associated risk(s)"@en ;
    rdfs:subClassOf :Event .

:Relation a rdfs:Class, owl:Class ;
    rdfs:label "Relation"@en ;
    rdfs:comment "Category of classes related to expressing information about relations between concepts"@en .

:RiskCauseRelation a rdfs:Class, owl:Class ;
    rdfs:label "Risk-Cause Relation" ;
    rdfs:comment "Associates a Cause with its potential Risk(s)"@en ;
    rdfs:subClassOf :Relation .

:relatedCause a rdf:Property, owl:ObjectProperty ;
    rdfs:label "related cause"@en ;
    rdfs:comment "Indicates a cause that has potential to materialise associated risk(s)"@en ;
    rdfs:domain :RiskCauseRelation ;
    rdfs:range :Cause ;
    owl:inverseOf :relatesToPotentialRisk .

:relatedPotentialRisk a rdf:Property, owl:ObjectProperty ;
    rdfs:label "related potential risk"@en ;
    rdfs:comment "Indicates potential risk that may materialise from associated cause(s)"@en ;
    rdfs:domain :RiskCauseRelation ;
    rdfs:range :Risk ;
    owl:inverseOf :relatesToCause .

# Consequence of Risk
:Consequence a rdfs:Class, owl:Class ;
    rdfs:label "Consequence"@en ;
    rdfs:comment "Indicates a potential consequence materialising from risk(s)"@en ;
    rdfs:subClassOf :Event .

:RiskConsequenceRelation a rdfs:Class, owl:Class ;
    rdfs:label "Risk-Consequence Relation" ;
    rdfs:comment "Associates a Risk with its potential Consequence(s)"@en ;
    rdfs:subClassOf :Relation .

:relatedConsequence a rdf:Property, owl:ObjectProperty ;
    rdfs:label "related consequence"@en ;
    rdfs:comment "Indicates a potential consequence materialising from associated risk(s)"@en ;
    rdfs:domain :RiskConsequenceRelation ;
    rdfs:range :Consequence ;
    owl:inverseOf :relatedMaterialisingRisk .

:relatedMaterialisingRisk a rdf:Property, owl:ObjectProperty ;
    rdfs:label "related materialising risk"@en ;
    rdfs:comment "Indicates risk materialising associated consequence(s)"@en ;
    rdfs:domain :RiskConsequenceRelation ;
    rdfs:range :Risk ;
    owl:inverseOf :relatedConsequence .

# Impact of Consequence
:Impact a rdfs:Class, owl:Class ;
    rdfs:label "Impact"@en ;
    rdfs:comment "Indicates potential impact(s) arising from consequence(s)"@en ;
    rdfs:subClassOf :Consequence .

:isImpactOfConsequence a rdf:Property, owl:ObjectProperty ;
    rdfs:label "is impact of consequence"@en ;
    rdfs:comment "Indicates the consenquence(s) causing this imapct"@en ;
    rdfs:domain :Impact ;
    rdfs:range :Consequence ;
    owl:inverseOf :causesPotentialImpact .

:causesPotentialImpact a rdf:Property, owl:ObjectProperty ;
    rdfs:label "causes potential impact"@en ;
    rdfs:comment "Indicates the potential impact(s) arising from this consequence"@en ;
    rdfs:domain :Consequence ;
    rdfs:range :Impact ;
    owl:inverseOf :isImpactOfConsequence .

:effectOfImpact a rdf:Property, owl:ObjectProperty ;
    rdfs:label "effect of impact"@en ;
    rdfs:comment "Indicates effects of impact and the affected things, stakeholders, or events"@en ;
    rdfs:domain :Impact .

# Measures
:Measure a rdfs:Class, owl:Class ;
    rdfs:label "Measure"@en ;
    rdfs:comment "A measure is intended to change, modifiy, or remove the probability, likelihood, or severity of an event"@en .

:ControlMeasure a rdfs:Class, owl:Class ;
    rdfs:label "Control Measure"@en ;
    rdfs:comment "A control is a measure intended to reduce the probability, likelihood, or severity of a cause with potential for risk"@en ;
    rdfs:subClassOf :Measure .

:MitigationMeasure a rdfs:Class, owl:Class ;
    rdfs:label "Mitigation Measure"@en ;
    rdfs:comment "A mitigation is a measure intended to reduce the probability, likelihood, or severity of a potential consequence resulting from risk"@en ;
    rdfs:subClassOf :Measure .

:MeasureChangeRelation a rdfs:Class, owl:Class ;
    rdfs:label "Measure-Change Relation"@en ;
    rdfs:comment "Associates a Measure with attributes it changes"@en ;
    rdfs:subClassOf :Relation .

:hasInherentCondition a rdf:Property, owl:ObjectProperty ;
    rdfs:label "has inherent condition"@en ;
    rdfs:comment "Indicates the inherent or pre-measure condition impacted by the measure"@en ;
    rdfs:domain :MeasureChangeRelation .

:hasResidualCondition a rdf:Property, owl:ObjectProperty ;
    rdfs:label "has residual condition"@en ;
    rdfs:comment "Indicates the residual or post-measure condition impacted by the measure"@en ;
    rdfs:domain :MeasureChangeRelation .

:hasControl a rdf:Property, owl:ObjectProperty ;
    rdfs:label "has control"@en ;
    rdfs:comment "Indicates use of control measure in Risk-Cause relationship"@en ;
    rdfs:domain :RiskCauseRelation ;
    rdfs:range :ControlMeasure ;
    owl:inverseOf :controlsRiskCause .

:controlsRiskCause a rdf:Property, owl:ObjectProperty ;
    rdfs:label "controls risk cause"@en ;
    rdfs:comment "Indicates the risk-cause relationship affected by this control"@en ;
    rdfs:domain :ControlMeasure ;
    rdfs:range :RiskCauseRelation ;
    owl:inverseOf :hasControl .

:hasMitigation a rdf:Property, owl:ObjectProperty ;
    rdfs:label "has mitigation"@en ;
    rdfs:comment "Indicates use of mitigation measure in a Risk-Consequence relationship"@en ;
    rdfs:domain :RiskConsequenceRelation ;
    rdfs:range :MitigationMeasure ;
    owl:inverseOf :mitigatesRiskConsequence .

:mitigatesRiskConsequence a rdf:Property, owl:ObjectProperty ;
    rdfs:label "mitigates risk consequence"@en ;
    rdfs:comment "Indicates the Risk-Consequence relationship affected by this mitigation"@en ;
    rdfs:domain :MitigationMeasure ;
    rdfs:range :RiskConsequenceRelation ;
    owl:inverseOf :hasMitigation .
