@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix riskos: <https://w3id.org/risky/riskos#> .
@prefix : <https://w3id.org/risky/riskonto#> .

#Event
:Event a rdfs:Class, owl:Class ;
    rdfs:label "Event"@en ;
    rdfs:comment "An occurrence of a process, activity, or something that takes place"@en .

:Likelihood a rdfs:Class, owl:Class ;
    rdfs:label "Likelihood"@en ;
    rdfs:comment "The likelihood of an event to occur, whether subjectively or objectively"@en .
:Frequency a rdfs:Class, owl:Class ;
    rdfs:label "Frequency"@en ;
    rdfs:comment "The likelihood of an event to occur in terms of frequency per temporal period"@en .
:Probability a rdfs:Class, owl:Class ;
    rdfs:label "Probability"@en ;
    rdfs:comment "The likelihood of an event to occur in terms of statistical value expressing its probability (e.g. between 0 and 1)"@en .

:hasLikelihood a rdf:Property, owl:ObjectProperty ;
    rdfs:label "has likelihood"@en ;
    rdfs:comment "Indicates the likelihood of an event to occur"@en ;
    rdfs:domain :Event ;
    rdfs:range :Likelihood .
:hasInherentLikelihood a rdf:Property, owl:ObjectProperty ;
    rdfs:label "has inherent likelihood"@en ;
    rdfs:comment "Indicates the inherent likelihood of an event to occur"@en ;
    rdfs:domain :Event ;
    rdfs:range :Likelihood ;
    rdfs:subPropertyOf :hasLikelihood .
:hasResidualLikelihood a rdf:Property, owl:ObjectProperty ;
    rdfs:label "has residual likelihood"@en ;
    rdfs:comment "Indicates the residual likelihood of an event to occur after some measure has been applied"@en ;
    rdfs:domain :Event ;
    rdfs:range :Likelihood ;
    rdfs:subPropertyOf :hasLikelihood .

:hasFrequency a rdf:Property, owl:ObjectProperty ;
    rdfs:label "has frequency"@en ;
    rdfs:comment "Indicates the frequency of an event per temporal period"@en ;
    rdfs:domain :Likelihood ;
    rdfs:range :Frequency .
:hasInherentFrequency a rdf:Property, owl:ObjectProperty ;
    rdfs:label "has inherent frequency"@en ;
    rdfs:comment "Indicates the inherent frequency of an event per temporal period"@en ;
    rdfs:domain :Likelihood ;
    rdfs:range :Frequency ;
    rdfs:subPropertyOf :hasFrequency .
:hasResidualFrequency a rdf:Property, owl:ObjectProperty ;
    rdfs:label "has residual frequency"@en ;
    rdfs:comment "Indicates the residual frequency of an event per temporal period after some measure has been applied"@en ;
    rdfs:domain :Likelihood ;
    rdfs:range :Frequency ;
    rdfs:subPropertyOf :hasFrequency .
:hasFrequencyValue a rdf:Property, owl:ObjectProperty ;
    rdfs:label "has frequency value"@en ;
    rdfs:label "Indicates the numerical value for frequency in terms of number of occurrences"@en ;
    rdfs:domain :Frequency .
:hasFrequencyPeriod a rdf:Property, owl:ObjectProperty ;
    rdfs:label "has frequency period"@en ;
    rdfs:label "Indicates the temporal period for expressing frequency"@en ;
    rdfs:domain :Frequency .

:hasProbability a rdf:Property, owl:ObjectProperty ;
    rdfs:label "has probability"@en ;
    rdfs:comment "Indicates the probability of an event to occur"@en ;
    rdfs:domain :Likelihood ;
    rdfs:range :Probability .
:hasInherentProbability a rdf:Property, owl:ObjectProperty ;
    rdfs:label "has inherent probability"@en ;
    rdfs:comment "Indicates the inherent probability of an event to occur"@en ;
    rdfs:domain :Likelihood ;
    rdfs:range :Probability ;
    rdfs:subPropertyOf :hasProbability .
:hasResidualProbability a rdf:Property, owl:ObjectProperty ;
    rdfs:label "has residual probability"@en ;
    rdfs:comment "Indicates the residual probability of an event to occur after some measure has been applied"@en ;
    rdfs:domain :Likelihood ;
    rdfs:range :Probability ;
    rdfs:subPropertyOf :hasProbability .
:hasProbabilityValue a rdf:Property, owl:ObjectProperty ;
    rdfs:label "has probability value"@en ;
    rdfs:comment "Indicates the statistical value for probability for an event to occur"@en ;
    rdfs:domain :Probability .

# Risk
:Risk a rdfs:Class, owl:Class ;
    rdfs:label "Risk"@en ;
    rdfs:subClassOf :Event .

# Source of Risk
:Source a rdfs:Class, owl:Class ;
    rdfs:label "Source"@en ;
    rdfs:comment "Indicates the source of risk i.e. the risk exists because of the source"@en .

:hasRisk a rdf:Property, owl:ObjectProperty ;
    rdfs:label "has risk"@en ;
    rdfs:comment "Indicates a source has a risk associated with it"@en ;
    rdfs:domain :Source ;
    rdfs:range :Risk ;
    owl:inverseOf :hasSource .

:hasSource a rdf:Property, owl:ObjectProperty ;
    rdfs:label "has source"@en ;
    rdfs:comment "Indicates a risk has a source associated with it"@en ;
    rdfs:domain :Risk ;
    rdfs:range :Source ;
    owl:inverseOf :isSourceForRisk .

